#!/bin/bash

source /opt/openhabian/functions/backup.bash


syncZdir() {
	s=$(echo "${src}${1}" | sed -e 's#//#/#g')
	d=$(echo "${dest}${1}" | sed -e 's#//#/#g')
echo	rsync -navh "${s}" "${d}"
	rsync -navh "${s}" "${d}"
}


if [[ $# -ne 2 ]]; then echo "wrong usage !"; exit 1; fi

src=$1
dest=$2
dev=/dev/%DEVICE2
mnt=%SYNCMOUNT

mount $dev $mnt

if [[ -z /etc/ztab ]]; then echo "FAILED"; exit 1; fi
	while read -r line; do
		case "$line" in
			"#"*)
				# Skip comment line
				continue
				;;
			"")
				# Skip empty line
				continue
				;;
			*)
				set -- $line
				if [[ "$1" = "dir" ]]; then
					syncZdir "$5"
				fi
				;;
		esac
done < /etc/ztab

umount $mnt
